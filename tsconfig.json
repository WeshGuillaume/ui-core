{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "baseUrl": "typings",
    "target": "ES5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.stories.tsx"]
}
