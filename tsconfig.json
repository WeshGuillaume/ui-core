{
  "compilerOptions": {
    "jsx": "react",
    "rootDirs": ["./src", "./.storybook"],
    "outDir": "./dist",
    "declarationDir": "./dist/typings",
    "lib": ["dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "module": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "typings",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "files": ["./src/index.ts"]
}
